<div class="container dashboard">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-center">
      <h1>Dashboard</h1>

      <img src="http://via.placeholder.com/100" alt="" style="border-radius: 50%">
      <hr>
      <%= link_to "", new_event_path, class: "fa fa-plus-square-o fa-2x"%>

      <h2 class="guest-links">As a guest</h2>
      <% @events.each do |event| %>
        <h5><%= link_to event.title, event_path(event) %></h5>

        <p><%= event.start_time %></p>

        <% @attendance = current_user.attendances.where(event: event).first %>

        <p style="font-weight: lighter"><%= link_to "Unbook this event", attendance_path(@attendance), method: :delete, data: {confirm: "are you sure ?"} %></p>
      <% end %>


      <h2>User as a host</h2>

      <% @organized_events.each do |event| %>
        <h5> <%= link_to event.title, event_path(event) %> </h5>
        <p><%= event.start_time%></p>
        <p style="font-weight: lighter"> <%= link_to "Edit event", edit_event_path(event) %> </p>
      <% end %>
    </div>
  </div>
</div>
