      <% end %>
      <li><a href="#"><i class="fa fa-comments"></i></a></li>

      <li><%= link_to "destroy", contact_path(user_id), method: :delete,class: "fa fa-address-book" %></li>
    </ul>
  </div>
<% end %>




<%end  %>
